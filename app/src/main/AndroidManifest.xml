            android:screenOrientation="portrait" />
        <activity
            android:name=".DeveloperActivity"
            android:exported="true" />
        <activity
            android:name=".RunActivity"
            android:exported="true" />
        <activity
            android:name=".WeightActivity"
            android:exported="true" />
        <activity
            android:name=".StepActivity"
            android:exported="true" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />
