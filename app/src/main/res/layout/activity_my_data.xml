<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyDataActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <View-->
<!--            android:background="@color/black2"-->
<!--            android:layout_width="fill_parent"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_height="1.0dip" -->
<!--            />-->


        <TextView
            android:id="@+id/tv_height_text"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_height_num"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="170cm"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_height"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_height_text"/>

        <TextView
            android:id="@+id/tv_weight_text"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/weight"
            app:layout_constraintTop_toBottomOf="@id/view_height"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_weight_num"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="60kg"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_height"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_weight"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_weight_text"/>

        <TextView
            android:id="@+id/tv_bmi_text"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/bmi"
            app:layout_constraintTop_toBottomOf="@id/view_weight"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_bmi_num"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="21.5"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_weight"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_bmi"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bmi_text"/>

        <TextView
            android:id="@+id/tv_birthday_text"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/birthday"
            app:layout_constraintTop_toBottomOf="@id/view_bmi"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_birthday_num"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="2001/01/01"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_bmi"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_birthday"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_birthday_text"/>

        <TextView
            android:id="@+id/tv_attendance_text"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/attendance_times_this_month"
            app:layout_constraintTop_toBottomOf="@id/view_birthday"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_attendance_num"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="10"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_birthday"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/view_attendance"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_attendance_text"/>

        <TextView
            android:id="@+id/tv_step_text"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/today_s_steps"
            app:layout_constraintTop_toBottomOf="@id/view_attendance"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_step_num"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="1000"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_attendance"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/view_step"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_step_text"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>