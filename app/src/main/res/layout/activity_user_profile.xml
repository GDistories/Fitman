<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".UserProfileActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line1"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/tv_firstName"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/first_name"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_firstName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:maxLength="30"
            android:maxLines="1"
            android:autofillHints="firstName"
            android:hint="@string/first_name"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tv_firstName"
            app:layout_constraintTop_toTopOf="@+id/tv_firstName"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="text" />

        <View
            android:id="@+id/line2"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_firstName"/>


        <TextView
            android:id="@+id/tv_lastName"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/last_name"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_lastName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:maxLength="30"
            android:maxLines="1"
            android:autofillHints="lastName"
            android:hint="@string/last_name"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tv_firstName"
            app:layout_constraintTop_toTopOf="@+id/tv_lastName"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="text" />

        <View
            android:id="@+id/line3"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_lastName"/>


        <TextView
            android:id="@+id/tv_phone"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/phone"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:maxLength="30"
            android:maxLines="1"
            android:autofillHints="phone"
            android:hint="@string/phone"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tv_firstName"
            app:layout_constraintTop_toTopOf="@+id/tv_phone"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="phone" />

        <View
            android:id="@+id/line4"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone"/>
        <TextView
            android:id="@+id/tv_email"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/e_mail"
            app:layout_constraintTop_toBottomOf="@+id/line4"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:maxLength="30"
            android:maxLines="1"
            android:autofillHints="email"
            android:hint="@string/e_mail"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/tv_firstName"
            app:layout_constraintTop_toTopOf="@+id/tv_email"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textEmailAddress" />


        <View
            android:id="@+id/line5"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email"/>

        <TextView
            android:id="@+id/tv_gender"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/gender"
            app:layout_constraintTop_toBottomOf="@+id/line5"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/line5"
            app:layout_constraintStart_toStartOf="@+id/et_firstName"
            app:layout_constraintEnd_toEndOf="@id/et_firstName">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:layout_marginEnd="30dp"/>
            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female" />
        </RadioGroup>

        <View
            android:id="@+id/line6"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_gender"/>

        <TextView
            android:id="@+id/tv_height"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/height"
            app:layout_constraintTop_toBottomOf="@+id/line6"
            app:layout_constraintStart_toStartOf="parent"/>

        <NumberPicker
            android:id="@+id/np_height"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@+id/tv_height"
            app:layout_constraintStart_toStartOf="@+id/et_firstName"
            app:layout_constraintEnd_toEndOf="@id/et_firstName"/>

        <TextView
            android:id="@+id/tv_cm"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="cm"
            app:layout_constraintTop_toBottomOf="@+id/line6"
            app:layout_constraintStart_toEndOf="@id/np_height"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/line7"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_height"/>

        <TextView
            android:id="@+id/tv_weight"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/weight"
            app:layout_constraintTop_toBottomOf="@+id/line7"
            app:layout_constraintStart_toStartOf="parent"/>

        <NumberPicker
            android:id="@+id/np_weight"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@+id/tv_weight"
            app:layout_constraintStart_toStartOf="@+id/et_firstName"
            app:layout_constraintEnd_toEndOf="@id/et_firstName"/>

        <TextView
            android:id="@+id/tv_kg"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="kg"
            app:layout_constraintTop_toBottomOf="@+id/line7"
            app:layout_constraintStart_toEndOf="@id/np_weight"
            tools:ignore="HardcodedText" />


        <View
            android:id="@+id/line8"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_weight"/>

        <TextView
            android:id="@+id/tv_birth"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/birthday"
            app:layout_constraintTop_toBottomOf="@+id/line8"
            app:layout_constraintStart_toStartOf="parent"/>

        <NumberPicker
            android:id="@+id/np_year"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@+id/tv_birth"
            app:layout_constraintEnd_toStartOf="@id/tv_year" />
        <TextView
            android:id="@+id/tv_year"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/year_slash"
            app:layout_constraintTop_toBottomOf="@+id/line8"
            app:layout_constraintEnd_toStartOf="@+id/np_month"/>

        <NumberPicker
            android:id="@+id/np_month"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@+id/tv_birth"
            app:layout_constraintStart_toStartOf="@+id/et_firstName"
            app:layout_constraintEnd_toEndOf="@id/et_firstName"/>
        <TextView
            android:id="@+id/tv_month"
            style="@style/TxtTitle"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:text="@string/month_slash"
            app:layout_constraintTop_toBottomOf="@+id/line8"
            app:layout_constraintStart_toEndOf="@+id/np_month"/>

        <NumberPicker
            android:id="@+id/np_day"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@+id/tv_birth"
            app:layout_constraintStart_toEndOf="@id/tv_month"
            app:layout_constraintEnd_toEndOf="@id/et_firstName"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:onClick="submit"
            app:layout_constraintTop_toBottomOf="@id/tv_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:onClick="cancel"
            android:backgroundTint="@color/black2"
            app:layout_constraintTop_toBottomOf="@id/btn_submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:onClick="logout"
            android:backgroundTint="@color/red"
            app:layout_constraintTop_toBottomOf="@id/btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/line9"
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_cancel"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>